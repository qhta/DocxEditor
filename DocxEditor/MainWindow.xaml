<Window x:Class="DocxEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocxEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Menu x:Name="MainMenu" VerticalAlignment="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_New" Click="New_Click"/>
        <MenuItem Header="_Open" Click="Open_Click"/>
        <Separator/>
        <MenuItem Header="_Exit" Click="Exit_Click"/>
      </MenuItem>
      <MenuItem Header="_Edit">
        <MenuItem Header="_Cut" Click="Cut_Click"/>
        <MenuItem Header="_Copy" Click="Copy_Click"/>
        <MenuItem Header="_Paste" Click="Paste_Click"/>
      </MenuItem>
      <MenuItem Header="_Help">
        <MenuItem Header="_About" Click="About_Click"/>
      </MenuItem>
    </Menu>
  </Grid>
</Window>
